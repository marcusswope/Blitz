<% @projects.each do |project| %>
  <div class="project">
    <h3>
        <%= link_to project.name, project %>
        <%= link_to image_tag('edit.png'), edit_project_path(project) %>
        <%= link_to image_tag('trash.png'), project, :confirm => 'Are you sure?', :method => :delete %>
    </h3>
    <br />
    <span>Information about the project</span>
  </div>
<% end %>
<br />
<div class="project">
   <h3><%= link_to 'Add New Project', new_project_path %></h3>
</div>